// Prisma schema for auth (PostgreSQL) + NextAuth Prisma Adapter

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum PhotoVisibility {
  PUBLIC
  UNLISTED
  PRIVATE
}

enum ReportTargetType {
  PHOTO
  COMMENT
  USER
}

enum ReportStatus {
  OPEN
  REVIEWED
  DISMISSED
}

model User {
  id            String   @id @default(cuid())
  name          String?
  email         String?  @unique
  emailVerified DateTime?
  image         String?

  // App-level identity (optional at first; can enforce later)
  username      String?  @unique

  bio           String?

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  accounts      Account[]
  sessions      Session[]

  photos        Photo[]

  likes         Like[]
  bookmarks     Bookmark[]
  comments      Comment[]

  reportsMade   Report[] @relation("ReportReporter")
  reportsOnUser Report[] @relation("ReportUserTarget")

  following     Follow[] @relation("UserFollowing")
  followers     Follow[] @relation("UserFollowers")

  @@index([createdAt])
}

model Photo {
  id                  String   @id @default(cuid())
  authorId            String
  categoryId          String
  caption             String?
  visibility          PhotoVisibility @default(PUBLIC)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  // Cloudinary
  cloudinaryPublicId  String   @unique
  assetUrl            String

  // Dimensions + basic metadata
  width               Int
  height              Int
  format              String?
  bytes               Int?

  // EXIF (optional, stored denormalized for fast reads)
  exifMake            String?
  exifModel           String?
  exifLensModel       String?
  exifFNumber         Float?
  exifExposureTime    String?
  exifIso             Int?
  exifFocalLength     Float?
  exifTakenAt         DateTime?

  author              User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  category            Category @relation(fields: [categoryId], references: [id], onDelete: Restrict)

  likes               Like[]
  bookmarks           Bookmark[]
  comments            Comment[]
  reports             Report[]

  @@index([createdAt])
  @@index([createdAt, id])
  @@index([authorId, createdAt])
  @@index([categoryId, createdAt])
  @@index([visibility, createdAt])
}

model Like {
  userId    String
  photoId   String
  createdAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  photo Photo @relation(fields: [photoId], references: [id], onDelete: Cascade)

  @@id([userId, photoId])
  @@index([photoId, createdAt])
  @@index([userId, createdAt])
}

model Bookmark {
  userId    String
  photoId   String
  createdAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  photo Photo @relation(fields: [photoId], references: [id], onDelete: Cascade)

  @@id([userId, photoId])
  @@index([userId, createdAt])
  @@index([photoId, createdAt])
}

model Comment {
  id        String   @id @default(cuid())
  photoId   String
  authorId  String
  body      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Moderation
  hiddenAt     DateTime?
  hiddenReason String?

  photo  Photo @relation(fields: [photoId], references: [id], onDelete: Cascade)
  author User  @relation(fields: [authorId], references: [id], onDelete: Cascade)

  reports Report[]

  @@index([photoId, createdAt])
  @@index([authorId, createdAt])
}

model Report {
  id         String           @id @default(cuid())
  reporterId String
  targetType ReportTargetType
  reason     String
  details    String?
  status     ReportStatus     @default(OPEN)
  createdAt  DateTime         @default(now())
  reviewedAt DateTime?

  // Target pointers (exactly one should be set, enforced in app logic)
  photoId   String?
  commentId String?
  userId    String?

  reporter User     @relation("ReportReporter", fields: [reporterId], references: [id], onDelete: Cascade)
  photo    Photo?   @relation(fields: [photoId], references: [id], onDelete: Cascade)
  comment  Comment? @relation(fields: [commentId], references: [id], onDelete: Cascade)
  user     User?    @relation("ReportUserTarget", fields: [userId], references: [id], onDelete: Cascade)

  @@index([createdAt])
  @@index([status, createdAt])
  @@index([targetType, createdAt])
  @@index([reporterId, createdAt])
  @@index([photoId, createdAt])
  @@index([commentId, createdAt])
  @@index([userId, createdAt])
}

model RateLimit {
  // Generic token bucket-ish counter per key+bucket.
  // Uses DB so it works across serverless instances.
  id        String   @id @default(cuid())
  key       String
  bucket    String
  count     Int      @default(0)
  resetAt   DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([key, bucket])
  @@index([resetAt])
}

model Category {
  id        String   @id @default(cuid())
  slug      String   @unique
  name      String
  createdAt DateTime @default(now())

  photos    Photo[]

  @@index([name])
}

model Follow {
  followerId  String
  followingId String
  createdAt   DateTime @default(now())

  follower    User @relation("UserFollowing", fields: [followerId], references: [id], onDelete: Cascade)
  following   User @relation("UserFollowers", fields: [followingId], references: [id], onDelete: Cascade)

  @@id([followerId, followingId])
  @@index([followingId, createdAt])
  @@index([followerId, createdAt])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expires])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@index([expires])
}
